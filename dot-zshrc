zstyle ':zsh:module:prompt' theme 'starship'

for modpath in ${XDG_CONFIG_HOME:=/home/treyvon/.config/zsh}/*(/N); do
    mod=$(basename $modpath)
    if zstyle -t "zsh:module:$mod" loaded; then
        continue
    fi

    if [[ -s $modpath/init.zsh ]]; then
        source $modpath/init.zsh
    fi

    if [[ $? -eq 0 ]]; then
        zstyle "zsh:module:$mod" loaded 'true';
    else
        zstyle "zsh:module:$mod" loaded 'false';
    fi
    unset mod
done

BROWSER='browser'
EDITOR='editor'
PAGER='pager'
